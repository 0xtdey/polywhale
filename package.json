{
  "name": "polywhale",
  "version": "2.0.0",
  "description": "PolyWhale - Desktop app for monitoring Polymarket whale transactions",
  "main": "electron/main.js",
  "homepage": "https://github.com/0xtdey/polywhale",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xtdey/polywhale.git"
  },
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --no-sandbox",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:publish": "electron-builder --linux --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "polymarket",
    "whale",
    "crypto",
    "trading",
    "desktop"
  ],
  "author": "PolyWhale <whale@polymarket.local>",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.polymarket.polywhale",
    "productName": "PolyWhale",
    "publish": {
      "provider": "github",
      "owner": "0xtdey",
      "repo": "polywhale"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Network",
      "icon": "build/icon.png",
      "desktop": {
        "Name": "PolyWhale",
        "Comment": "Monitor Polymarket whale transactions",
        "Categories": "Network;Finance;",
        "Terminal": "false"
      }
    },
    "deb": {
      "depends": [
        "python3",
        "python3-pip"
      ],
      "afterInstall": "build/postinstall.sh"
    },
    "files": [
      "electron/**/*",
      "*.py",
      "config.py",
      "database.py",
      "polymarket_api.py",
      "notifier_service.py",
      "backend_server.py",
      "requirements.txt",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".",
        "to": ".",
        "filter": [
          "*.py",
          "requirements.txt",
          "config.py"
        ]
      }
    ]
  }
}
